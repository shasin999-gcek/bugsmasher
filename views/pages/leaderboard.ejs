<!DOCTYPE html>
<html lang="en">
	<% include ../partials/head %>
	<body>
		<% include ../partials/header %>

		<div class="container" style="margin-top: 30px;">
			<h1 class="page-header"><code>Leaderboard</code></h1><hr />
			<div class="card">
				<h5 class="card-header">Teams</h5>
				<div class="card-body">
					<% if(leaderboard.length > 0) { %>
						<table class="table table-hover table-bordered">
							<thead>
								<tr>
									<tr>
										<th scope="col">Sl. no</th>
                    <th scope="col">Team Name</th>
                    <th scope="col">Completed Levels</th>
										<th scope="col">Start time</th>
										<th scope="col">End time</th>
									</tr>
			  			</tr>
							</thead>
							<tbody>
								<% leaderboard.forEach(function(team, index) { %>
									<tr id="<%= team._id %>">
										<td scope="row"><%= index + 1 %></td>
										<td scope="row"><a href="/admin/leaderboard/<%= team.result.team_name %>"><%= team.result.team_name %></a></td>
                    <td scope="row"><%= team.completedLevels.toString() %></td>
                    <td scope="row"><%= new Date(team.result.start_time) %></td>
										<td scope="row"><%= team.end_time %></td>
									</tr>	
								<% }) %>
							</tbody>
						</table>
					<% } else { %>
						<p class="card-text"> No teams uploaded yet... </p>
					<% } %>
				</div> <!-- card body-->
			</div><!-- card -->
		</div> <!-- end container -->

		<% include ../partials/scripts %>
	</body>
</html>